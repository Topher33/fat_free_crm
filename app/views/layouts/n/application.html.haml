!!!5
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    -#TODO: Title should be customizable - Settings.title
    %title Fat Free CRM
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}
    = stylesheet_link_tag :application_n
    = stylesheet_link_tag :print, :media => 'print'
    = hook(:stylesheet_includes, self) do
      #{yield :stylesheet_includes}
    %style= yield :styles

    = javascript_include_tag :application_n
    = csrf_meta_tag
    = hook(:javascript_includes, self)

    -#TODO: icon should be configurable - Settings.ico
    %link{:rel=>"shortcut icon", :href=>"/favicon.ico", :type=>"image/x-icon"}
    %link{:rel=>"icon", :href=>"/favicon.ico", :type=>"image/x-icon"}

    %link{:href => "https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css", :rel => "stylesheet"}

    /HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>  

  %body.hold-transition.skin-blue.sidebar-mini
    .wrapper
      %header.main-header
        / Logo
        %a.logo{:href => root_path}
          %span.logo-mini
            %b A
            LT
          %span.logo-lg
            %b Admin
            LTE
        %nav.navbar.navbar-static-top{:role => 'navigation'}

          / Sidebar toggle button
          %a.sidebar-toggle{:href => "#", :role => "button", :data => { :toggle => "offcanvas"}}

          / Navbar Right Menu
          .navbar-custom-menu
            %ul.nav.navbar-nav
              / Messages: style can be found in dropdown.less
              %li.dropdown.messages-menu

                / Menu toggle button
                %a.dropdown-toggle{:href => '#', :data => {:toggle => 'dropdown'}}
                  %i.fa.fa-envelope-o
                  %span.label.label-success
                    4
                %ul.dropdown-menu
                  %li.header You have 5 messages

      / Left side column. contains the logo and sidebar
      %aside.main-sidebar
        / sidebar: style can be found in sidebar.less
        %section.sidebar
          / Sidebar user panel (optional)
          = render "layouts/user_panel"
          / search form (Optional)
          %form.sidebar-form{:action => "#", :method => "get"}
            .input-group
              %input.form-control{:name => "q", :placeholder => "Search...", :type => "text"}/
              %span.input-group-btn
                %button#search-btn.btn.btn-flat{:name => "search", :type => "submit"}
                  %i.fa.fa-search
          / /.search form
          / Sidebar Menu
          = render 'layouts/n/sidebar'
        / /.sidebar
      / Content Wrapper. Contains page content
      .content-wrapper
        / Content Header (Page header)
        %section.content-header
          %h1
            Page Header
            %small Optional description
          %ol.breadcrumb
            %li
              %a{:href => "#"}
                %i.fa.fa-dashboard
                Level
            %li.active Here
        / Main content
        %section.content
          = yield
          / Your Page Content Here
        / /.content
      / /.content-wrapper
      / Main Footer
      %footer.main-footer
        / To the right
        .pull-right.hidden-xs
          Anything you want
        / Default to the left
        %strong
          Copyright Â© 2015
          = succeed "." do
            %a{:href => "#"} Company
        All rights reserved.
      / Control Sidebar
      %aside.control-sidebar.control-sidebar-dark
        / Create the tabs
        %ul.nav.nav-tabs.nav-justified.control-sidebar-tabs
          %li.active
            %a{"data-toggle" => "tab", :href => "#control-sidebar-home-tab"}
              %i.fa.fa-home
          %li
            %a{"data-toggle" => "tab", :href => "#control-sidebar-settings-tab"}
              %i.fa.fa-gears
        / Tab panes
        .tab-content
          / Home tab content
          #control-sidebar-home-tab.tab-pane.active
            %h3.control-sidebar-heading Recent Activity
            %ul.control-sidebar-menu
              %li
                %a{:href => "javascript::;"}
                  %i.menu-icon.fa.fa-birthday-cake.bg-red
                  .menu-info
                    %h4.control-sidebar-subheading Langdon's Birthday
                    %p Will be 23 on April 24th
            / /.control-sidebar-menu
            %h3.control-sidebar-heading Tasks Progress
            %ul.control-sidebar-menu
              %li
                %a{:href => "javascript::;"}
                  %h4.control-sidebar-subheading
                    Custom Template Design
                    %span.label.label-danger.pull-right 70%
                  .progress.progress-xxs
                    .progress-bar.progress-bar-danger{:style => "width: 70%"}
            / /.control-sidebar-menu
          / /.tab-pane
          / Stats tab content
          #control-sidebar-stats-tab.tab-pane Stats Tab Content
          / /.tab-pane
          / Settings tab content
          #control-sidebar-settings-tab.tab-pane
            %form{:method => "post"}
              %h3.control-sidebar-heading General Settings
              .form-group
                %label.control-sidebar-subheading
                  Report panel usage
                  %input.pull-right{:checked => "checked", :type => "checkbox"}
                %p
                  Some information about this general settings option
              / /.form-group
          / /.tab-pane
      / /.control-sidebar
      /
        Add the sidebar's background. This div must be placed
        immediately after the control sidebar
      .control-sidebar-bg
      /
        Optionally, you can add Slimscroll and FastClick plugins.
        Both of these plugins are recommended to enhance the
        user experience. Slimscroll is required when using the
        fixed layout.