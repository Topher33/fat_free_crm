.fields.condition.form-group.form-inline{:"data-object-name" => f.object_name}

  .form-group
    = link_to_remove_fields t('ransack.remove_condition'), f, options

  .form-group
    = f.attribute_fields do |a|
      %span.fields{:"data-object-name" => f.object_name}
        = a.attribute_select({}, :class => 'ransack_attribute form-control')
  .form-group
    = f.predicate_select({}, :class => 'ransack_predicate form-control')

  .form-group
    = f.value_fields do |v|
      %span.fields.value{:"data-object-name" => f.object_name}
      = v.text_field :value, :style => "width: 200px;", :class => "ransack_query form-control"